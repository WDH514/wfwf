<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backing1"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:src="@drawable/tp1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button1bg"
            android:text=""
            android:textColor="#ffff00"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="9.282dp"
            android:layout_toLeftOf="@id/button1"
            android:layout_below="@id/button1"
            android:background="@drawable/button2bg"
            android:text=""
            android:textColor="#ffff00"
            android:textSize="15dp" />


        <Button
            android:id="@+id/button4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="9.282dp"
            android:layout_toRightOf="@id/button1"
            android:layout_below="@id/button1"
            android:background="@drawable/button24b"
            android:text="AR配景"
            android:textColor="#ffff00"
            android:textSize="15dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:layout_above="@id/button1"
            android:layout_toLeftOf="@id/button4"
            android:background="@drawable/button3b"
            android:text="刺绣"
            android:textColor="#ffff00"
            android:textSize="15dp" />
    </RelativeLayout>


</FrameLayout>